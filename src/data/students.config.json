{
  "page": {
    "title": "Our Amazing Students",
    "subtitle": "Meet the brilliant minds, unique personalities, and future leaders that make Class 11-Newton extraordinary.",
    "badge": {
      "text": "Student Directory",
      "icon": "Users"
    }
  },
  "display": {
    "defaultView": "grid",
    "defaultSort": "name",
    "defaultFilter": "all",
    "itemsPerPage": 12
  },
  "search": {
    "placeholder": "Search by name, position, dream job, or fun fact...",
    "enabled": true
  },
  "filters": {
    "sort": [
      {
        "value": "name",
        "label": "Name (A-Z)"
      },
      {
        "value": "name-desc",
        "label": "Name (Z-A)"
      },
      {
        "value": "position", 
        "label": "Position"
      },
      {
        "value": "dreamJob",
        "label": "Dream Job"
      }
    ],
    "category": [
      {
        "value": "all",
        "label": "All Students"
      },
      {
        "value": "officers",
        "label": "Class Officers"
      },
      {
        "value": "regular",
        "label": "Regular Students"
      }
    ]
  },
  "layout": {
    "grid": {
      "cardHeight": "420px",
      "imageHeight": "192px",
      "showQuote": false,
      "showFunFact": true,
      "showDreamJob": true,
      "showSocials": true,
      "showHeartButton": true
    },
    "list": {
      "imageSize": "80px",
      "showFunFact": true,
      "showDreamJob": true,
      "showSocials": true,
      "showHeartButton": true
    }
  },
  "modal": {
    "sections": {
      "profilePicture": true,
      "personalQuote": true,
      "quickStats": true,
      "dreamJob": true,
      "funFact": true,
      "skillsInterests": true,
      "contactInfo": true
    },
    "skillsInterests": {
